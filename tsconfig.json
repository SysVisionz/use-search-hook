{
    "compilerOptions": {
      "outDir": "./dist/",
      "target": "es6",
      "skipLibCheck": true,
      "module": "es2020",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "lib": ["es2020", "DOM"],
      "declaration": true
    },
    "include": ["src/**/*.ts", "index.d.ts"],
    "exclude": ["/node_modules", "/test-ts", "/test", "/dist"]
}